<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#332973"
    android:paddingLeft="10dp"
    tools:context=".SignUpScreen">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="200dp"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="140dp"
        android:text="WorldCinema"
        android:textColor="#EF3A01"
        android:textSize="25sp"
        android:textStyle="bold" />

    <FrameLayout
        android:layout_width="343dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginTop="300dp"
        android:onClick="click">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/back" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:text="У меня уже есть аккаунт"
            android:textColor="#EF3A01"
            android:textSize="15sp"
            android:textStyle="bold" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="343dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginTop="230dp"
        android:background="#EF3A01"
        android:onClick="click1"
        >

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:text="Зарегестрироваться"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            />
    </FrameLayout>

    <FrameLayout
        android:layout_width="343dp"
        android:layout_height="44dp"
        android:layout_gravity="center"
        android:layout_marginTop="145dp"
        android:background="@drawable/back">

        <EditText
            android:id="@+id/pass22"
            android:layout_width="343dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:paddingLeft="10dp"
            android:text="Повторить пароль"
            android:textColor="#AFAFAF"
            android:textSize="14sp" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="343dp"
        android:layout_height="44dp"
        android:layout_gravity="center"
        android:layout_marginBottom="80dp"
        android:background="@drawable/back">

        <EditText
            android:id="@+id/textView6"
            android:layout_width="343dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:paddingLeft="10dp"
            android:text="Имя"
            android:textColor="#AFAFAF"
            android:textSize="14sp" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="343dp"
        android:layout_height="44dp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:background="@drawable/back">

        <EditText
            android:id="@+id/textView7"
            android:layout_width="343dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"

            android:layout_marginBottom="0dp"
            android:paddingLeft="10dp"
            android:text="Фамилия"
            android:textColor="#AFAFAF"
            android:textSize="14sp" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="343dp"
        android:layout_height="44dp"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        android:background="@drawable/back">

        <EditText
            android:id="@+id/e_mail"
            android:layout_width="343dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:paddingLeft="10dp"
            android:text="E-mail"
            android:textColor="#AFAFAF"
            android:textSize="14sp" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="343dp"
        android:layout_height="44dp"
        android:layout_gravity="center"
        android:layout_marginTop="90dp"
        android:background="@drawable/back">

        <EditText
            android:id="@+id/pass11"
            android:layout_width="343dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:paddingLeft="10dp"
            android:text="Пароль"
            android:textColor="#AFAFAF"
            android:textSize="14sp" />
    </FrameLayout>

</FrameLayout>